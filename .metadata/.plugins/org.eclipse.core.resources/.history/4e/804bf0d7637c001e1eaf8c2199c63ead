#include "fsm_manual.h"

void fsm_manual_run(){
	switch(status){
	case MODE2:
		status = AUTO_RED;
		break;
		setTimer3(500);
	case AUTO_RED:
		if (timer1_flag == 1){
			status = MODE1;
			clearTimer1();
			setTimer1(GREEN * 1000);
		}
		if (isButton1Pressed() == 1){
			status = MODE3;
			setTimer1(5000); 		// sau 5 giây không nhấn nút quay lại auto
		}
		if (timer3_flag == 1){
			set_led(MAN_RED);
		}
		break;
	case MAN_RED:

	case MODE3:
		status = AUTO_GRE;
		break;
	case AUTO_GRE:
		if (timer1_flag == 1){
			status = MODE1;
		}
		if (isButton1Pressed() == 1){
			status = MODE4;
			setTimer1(5000);
		}
		if (timer3_flag == 1){
			set_led(MAN_GRE);
		}
		break;
	case MAN_GRE:

		break;


	case MODE4:
		status = AUTO_YEL;
		break;
	case AUTO_YEL:
		if(timer1_flag == 1){
			status = MODE1;
			setTimer1(5000);
		}
		if (isButton1Pressed() == 1){
			status = MODE1;
			setTimer1(5000);
		}
		if (timer3_flag == 1){
			set_led(MAN_YEL);
		}
		break;
	case MAN_YEL:
		break;
	}
}


