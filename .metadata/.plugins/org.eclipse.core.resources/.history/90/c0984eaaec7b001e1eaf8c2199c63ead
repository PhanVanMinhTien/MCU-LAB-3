#include "fsm_automatic.h"

int GREEN = 0;
int RED = 0;
int YEL = 0;

void fsm_automatic_run(){
	switch(status){
	case INIT:
		//TODO
		status = MODE1;
		RED = 5;
		GREEN = 3;
		YEL = 2;
		break;

	case MODE1:
		//TODO
		HAL_GPIO_WritePin(RED_HOR_GPIO_Port, RED_HOR_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(GRE_HOR_GPIO_Port, GRE_HOR_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(YEL_HOR_GPIO_Port, YEL_HOR_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(RED_VER_GPIO_Port, RED_VER_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(GRE_VER_GPIO_Port, GRE_VER_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(YEL_VER_GPIO_Port, YEL_VER_Pin, GPIO_PIN_SET);

		status = RED1_GRE2;
		setTimer1(GREEN * 1000);		//set Timer1 = duration RED
		break;
	case RED1_GRE2:
		//TODO
		setRED1();
		setGRE2();
		//chuyển trạng thái
		if (timer1_flag == 1){
			status = RED1_YEL2;
			setTimer1(1000);
		}

		if (isButton1Pressed() == 1){
			status = MAN_RED;
			setTimer1(10000);
		}

		break;
	case RED1_YEL2:
		setRED1();
		setYEL2();

		if (timer1_flag == 1){
			status = GRE1_RED2;
			setTimer1(3000);
		}

		if (isButton1Pressed() == 1)
		{
			status = MAN_RED;
			setTimer1(10000);
		}
		break;

	case GRE1_RED2:
		//TODO
		setGRE1();
		setRED2();

		//chuyển trạng thái
		if (timer1_flag == 1){
			status = YEL1_RED2;
			setTimer1(2000);
		}

		if (isButton1Pressed() == 1){
			status = MAN_RED;
			setTimer1(10000);
		}

		break;
	case YEL1_RED2:
		//TODO
		setYEL1();
		setRED2();

		//chuyển trạng thái
		if (timer1_flag == 1){
			status = RED1_GRE2;
			setTimer1(3000);
		}

		if (isButton1Pressed() == 1){
			status = MAN_RED;
			setTimer1(10000);
		}
		break;
	default:
		break;
	}
}

