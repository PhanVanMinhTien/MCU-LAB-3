#include "fsm_manual.h"

void fsm_manual_run(){
	switch(status){
	case MODE1:
		switch (status){
			case MAN_RED:
				//TODO

				if(timer1_flag == 1){
					//status = AUTO_RED;

					setTimer1(3000);
				}
				if (isButton1Pressed() == 1){
					status = MAN_GRE;
					setTimer1(10000); // 10 giây không nhấn thì quay về auto
				}
				break;
			case MAN_GRE:
				//TODO

				if(timer1_flag == 1){
					//status = AUTO_GRE;
					setTimer1(2000);
				}
				if (isButton1Pressed() == 1){
					//status = MAN_YEL;
					setTimer1(10000); // 10 giây không nhấn thì quay về auto
				}
				break;
			case MAN_YEL:


				if(timer1_flag == 1){
					//status = AUTO_YEL;
					setTimer1(5000);
				}
				if (isButton1Pressed() == 1){
					status = MAN_RED;
					setTimer1(10000); // 10 giây không nhấn thì quay về auto
				}
				break;
			default:
				break;
			}
		break;

	}
}
