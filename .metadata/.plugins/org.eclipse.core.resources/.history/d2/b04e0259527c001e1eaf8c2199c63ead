#include "fsm_manual.h"

void fsm_manual_run(){
	switch (status){
	case MODE2:
		status = MAN_RED;
		setTimer0(5000);
		setTimer5(10);
		break;
	case MAN_RED:
		//TODO
		if(timer5_flag == 1){
			set_led(MAN_RED);
			setTimer5(500);
		}
		if (isButton1Pressed() == 1){
			status = MAN_GRE;
			setTimer0(5000); // 10 giây không nhấn thì quay về auto
		}
		break;
	case MAN_GRE:
		//TODO

		if(timer5_flag == 1){
			//status = AUTO_GRE;
			set_led(MAN_GRE);
			setTimer5(500);
		}
		if (isButton1Pressed() == 1){
			status = MAN_YEL;
			setTimer0(5000); // 10 giây không nhấn thì quay về auto
		}
		break;
	case MAN_YEL:

		if(timer5_flag == 1){
			set_led(MAN_YEL);
			setTimer5(500);
		}
		if (isButton1Pressed() == 1){
			status = MODE1;
			setTimer0(5000); // 10 giây không nhấn thì quay về auto
		}
		break;
	default:
		break;
	}
}
