#include "fsm_automatic.h"

void fsm_automatic_run(){
	switch(status){
	case INIT:
		//TODO
		HAL_GPIO_WritePin(LED_RED_GPIO_Port, LED_RED_Pin, GPIO_PIN_SET); // tắt đèn
		HAL_GPIO_WritePin(LED_GRE_GPIO_Port, LED_GRE_Pin, GPIO_PIN_SET); // tắt đèn
		HAL_GPIO_WritePin(LED_YEL_GPIO_Port, LED_YEL_Pin, GPIO_PIN_SET); // tắt đèn

		status = AUTO_RED;
		setTimer1(500);		//set timer cho auto_red
		break;
	case AUTO_RED:
		//TODO
		HAL_GPIO_WritePin(LED_RED_GPIO_Port, LED_RED_Pin, GPIO_PIN_RESET);
		HAL_GPIO_WritePin(LED_GRE_GPIO_Port, LED_GRE_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(LED_YEL_GPIO_Port, LED_YEL_Pin, GPIO_PIN_SET);

		//chuyển trạng thái
		if (timer1_flag == 1){
			status = AUTO_GRE;
			setTimer1(300);
		}
		if (isButton1Pressed() == 1){
			status = MAN_RED;
			setTimer1(1000);
		}
		break;
	case AUTO_GRE:
		//TODO
		HAL_GPIO_WritePin(LED_RED_GPIO_Port, LED_RED_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(LED_GRE_GPIO_Port, LED_GRE_Pin, GPIO_PIN_RESET);
		HAL_GPIO_WritePin(LED_YEL_GPIO_Port, LED_YEL_Pin, GPIO_PIN_SET);

		//chuyển trạng thái
		if (timer1_flag == 1){
			status = AUTO_YEL;
			setTimer1(200);
		}

		if (isButton1Pressed() == 1){
			status = MAN_GRE;
			setTimer1(1000);
		}

		break;
	case AUTO_YEL:
		//TODO
		HAL_GPIO_WritePin(LED_RED_GPIO_Port, LED_RED_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(LED_GRE_GPIO_Port, LED_GRE_Pin, GPIO_PIN_SET);
		HAL_GPIO_WritePin(LED_YEL_GPIO_Port, LED_YEL_Pin, GPIO_PIN_RESET);

		//chuyển trạng thái
		if (timer1_flag == 1){
			status = AUTO_RED;
			setTimer1(500);
		}

		if (isButton1Pressed() == 1){
			status = MAN_YEL;
			setTimer1(1000);
		}
		break;
	default:
		break;
	}
}

